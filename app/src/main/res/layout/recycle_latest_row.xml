<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/numberingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <ImageView
                android:id="@+id/imag_comm"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/dim10"
                android:background="@drawable/defaulticon"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/imagewrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:orientation="vertical">



            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_toLeftOf="@+id/imag_comm"
                android:layout_toRightOf="@+id/numberingText"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/commonTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="Titel"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/commonTit"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/commonTitle"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Titel"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/dim10"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/common_cat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="@string/comment"
                        android:textColor="@color/orange"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/comDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="Date"
                        android:textColor="@color/orange"
                        android:textSize="12sp" />
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>