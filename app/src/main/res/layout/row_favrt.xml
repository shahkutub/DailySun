<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_imageh"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imgFvrt"
            android:layout_width="@dimen/_imagew"
            android:layout_height="@dimen/_imageh"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
        />

        <ImageView
            android:id="@+id/fvrtBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgFvrt"
            android:layout_alignTop="@+id/imgFvrt"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/imgFvrt"
            android:layout_toRightOf="@+id/fvrtBtn"
            android:layout_alignBottom="@+id/imgFvrt"
            android:layout_alignTop="@+id/imgFvrt"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/fvrtTxtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Titel"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fvrtTxtTi"
                android:layout_below="@+id/fvrtTxtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lines="1"
                android:maxLines="1"
                android:textSize="12sp"
                android:text="Titel"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fvrtTxtTi"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fvrtCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/orange"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dateFvrt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_alignParentRight="true"
                    android:text="Date"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dim10"
                    android:textColor="@color/orange"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>